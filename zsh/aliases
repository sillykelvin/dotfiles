#
# Aliases of zsh
#


# cd
alias .0='cd .'
alias .1='cd ..'
alias .2='cd ../..'
alias .3='cd ../../..'
alias .4='cd ../../../..'
alias .5='cd ../../../../..'

# ls
alias ls='LC_COLLATE=C ls --color=auto --group-directories-first'
alias ll='ls -alF'

# cat
alias cat=bat

# grep
alias grep='grep --color=auto'

# ps
alias pss='ps ux | grep -v grep | grep -iF '

# remake
alias mk='make'
alias mk2='make -j2'
alias mk4='make -j4'
alias mk8='make -j8'
alias mki='make install'
alias mc='make clean'
alias rmk='make clean;make'
alias nj='ninja -v'

# vi
alias vi=nvim
alias vim=nvim

# rm directories
alias rd='rm -rf'

# clear
alias cls=clear

# ping
alias ping='ping -c 3'

# proxychains
alias fkgfw='proxychains4'
alias fk='proxychains4 -q'

# svn
alias s=svn
alias ss='svn st'
alias sst='svn st | grep "^[^?]"'
alias sup='svn up'
alias scm='svn ci -m'
alias sdf='svn diff'

# git
alias g=git
alias gs='git status'
alias ga='git add'
alias gc='git checkout'
alias gb='git branch -av'
alias gm='git merge'
alias gd='git diff'
alias gdc='git diff --cached'
alias gcm='git commit -m'
alias gcam='git commit -am'
alias gl='git log'
alias glgdo='git log --graph --decorate --oneline'
alias gpo='git push origin'
alias gpom='git push origin master'
alias gpos='git push origin source'
alias gpod='git push origin devel'
alias glom='git pull origin master'
alias glos='git pull origin source'
alias glod='git pull origin devel'
